<div class="listings">
  <h2>List Your Product here</h2>
<%= form_for @listing do |f| %>
  <fieldset class="row">
    <%= f.label :name %> 
    <%= f.text_field :name %>
  </fieldset>
  
  <fieldset class="row">
    <%= f.label :description %>
    <%= f.text_area :description, size: '100x10' %>
  </fieldset>
  <fieldset class="row">
    <%= f.file_field :avatar %>
  </fieldset>
  <fieldset class="row">
    <%= f.submit %>
  </fieldset>
<% end %>
</div>